#!/bin/bash
# Custom bases as strings
water_base="ewwatratewa"   # Each character maps to a digit
stir_base="ti.itirtrtr"    # Each character maps to a digit
bestchol_base="shtbeolhc"  # Each character maps to a digit
convert_to_decimal() {
    local input=$1
    local base=$2
    local decimal=0
    local len=${#input}
    
    for (( i=0; i<$len; i++ )); do
        local digit=${input:i:1}
        local digit_value=$(echo "$base" | grep -b -o "$digit" | cut -d: -f1)
        decimal=$((decimal * ${#base} + digit_value))
    done
    
    echo $decimal
}
convert_to_base() {
    local decimal=$1
    local base=$2
    local result=""
    
    if (( decimal == 0 )); then
        echo "${base:0:1}"
        return
    fi
    
    while (( decimal > 0 )); do
        local remainder=$((decimal % ${#base}))
        result="${base:remainder:1}$result"
        decimal=$((decimal / ${#base}))
    done
    
    echo $result
}
water_decimal=$(convert_to_decimal "$WATER" "$water_base")
stir_decimal=$(convert_to_decimal "$STIR" "$stir_base")
result_decimal=$((water_decimal + stir_decimal))
result_base_bestchol=$(convert_to_base "$result_decimal" "$bestchol_base")
echo $result_base_bestchol
